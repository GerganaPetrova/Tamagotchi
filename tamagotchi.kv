<GameScreen>:
    on_enter: root.initialize()
    FloatLayout:
        Label:
            id: points
            pos_hint: {'x': 0.1, 'y': 0.1}
        Label:
            id: touch_count
            pos_hint: {'x': 0.1, 'y': 0.2}
        Label:
        GridLayout:
            size_hint: (1, 1)
            id: game_grid
            rows: 3
            cols: 3
            BoxLayout:
                Image:
                    id: 0x0
            BoxLayout:
                Image:
                    id: 0x1
            BoxLayout:
                Image:
                    id: 0x2
            BoxLayout:
                Image:
                    id: 1x0
            BoxLayout:
                Image:
                    id: 1x1
            BoxLayout:
                Image:
                    id: 1x2
            BoxLayout:
                Image:
                    id: 2x0
            BoxLayout:
                Image:
                    id: 2x1
            BoxLayout:
                Image:
                    id: 2x2
