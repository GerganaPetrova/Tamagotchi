<LoginScreen>:
    GridLayout:
        rows: 3
        spacing: 50

        BoxLayout:
            id: name
            TextInput:
                id: text_input
                hint_text: 'Choose name...'
                multiline: False

        BoxLayout:
            id: panda_button
            Button:
                on_press: root.create_panda(text_input)
                background_color: [1,1,1,0]
                Image:
                    source: './images/pandas/panda_button.png'
                    center: self.parent.center
        BoxLayout:
            id: doctor_button
            Button:
                on_press: root.create_doctor(text_input)
                background_color: [1,1,1,0]
                Image:
                    source: './images/doctors/08.5.png'
                    center: self.parent.center
    
     
<PandaScreen>:
    on_enter: root.initialize()
    BoxLayout:
        FloatLayout:
            BoxLayout:
                id: panda_tamagotchi 
                Image:
                    id: panda_image
                    source: './images/pandas/first_panda.png'
            Button:
                id: feed
                on_press: root.feed_button()
                background_color: [1,1,1,0]
                pos: (10, 10)
                size_hint: (0.2, 0.2)
                Image:
                    source: './images/buttons/bamboo.png'
                    center: self.parent.center
                    size: (60, 60)
            Button:
                id: clear
                on_press: root.clear_button()
                background_color: [1,1,1,0]
                pos: (100, 10)
                size_hint: (0.2, 0.2)
                Image:
                    source: './images/buttons/clean.png'
                    center: self.parent.center
                    size: (60, 60)
            Button:
                id: heal 
                on_press: root.heal_button()
                background_color: [1,1,1,0]
                pos: (190, 10)
                size_hint: (0.2, 0.2)
                Image:
                    source: './images/buttons/heal.png'
                    center: self.parent.center
                    size: (60, 60)
            Button:
                id: sleep 
                on_press: root.sleep_button()
                background_color: [1,1,1,0]
                pos: (280, 10)
                size_hint: (0.2, 0.2)
                Image:
                    source: './images/buttons/sleep.png'
                    center: self.parent.center
                    size: (60, 60)
            Button:
                id: play 
                on_press: root.play_button()
                background_color: [1,1,1,0]
                pos: (370, 10)
                size_hint: (0.2, 0.2)
                Image:
                    source: './images/buttons/play.png'
                    center: self.parent.center
                    size: (60, 60)
        BoxLayout:
            id: progress_bars
            orientation: 'vertical'
            spacing: 5 

            Label:
                id: energy_bar
            Label:
                id: health_bar
            Label:
                id: happiness_bar
            Label:
                id: clean_bar
            Label:
                id: hunger_bar
