<LoginScreen>:
    GridLayout:
        rows: 3
        spacing: 50

        BoxLayout:
            id: name
            TextInput:
                id: text_input
                hint_text: 'Choose name...'
                multiline: False

        BoxLayout:
            id: panda
            Button:
                on_press: root.create_panda(text_input)
                Image:
                    source: './images/pandas/panda_button.png'
                    center: self.parent.center
        BoxLayout:
            id: doctor
            Button:
                on_press: root.create_doctor(text_input)
                Image:
                    source: './images/doctors/08.5.png'
                    center: self.parent.center

    
